##
# Wordpress nginx settings for Dorel websites
# Author: Bob van Luijt
##


##
# Define server settings
##
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    charset UTF-8;
    root /var/www/magento2;
    
    index index.php index.html index.htm;
    server_name www.newmagento.com;
    
    set $MAGE_ROOT /var/www/magento2;
    set $MAGE_MODE developer;
    
    location / {
        try_files $uri/ /index.php?$args;
    }
    
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
        fastcgi_index index.php;
        include fastcgi.conf;
        add_header Cache-Control "no-store"; # as defined in the map
        access_log off;
    }
    location ~* \.(js|css|svg|png|jpg|jpeg|gif|ico|eot|otf|ttf|woff)$ {
        add_header Access-Control-Allow-Origin *;
        add_header Cache-Control "public";
        access_log off;
        log_not_found off;
        expires 1y;
    }
    location ~ /\.ht {
           deny all;
    }
}
